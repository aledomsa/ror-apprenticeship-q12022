<p id="notice"><%= notice %></p>

<h1>Abilities</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Ability</th>
      <th>Is hidden</th>
      <th>Name</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abilities.each do |ability| %>
      <tr>
        <td><%= ability.id %></td>
        <td><%= ability.ability_id %></td>
        <td><%= ability.is_hidden %></td>
        <td><%= ability.name %></td>
        <td><%= ability.url %></td>
        <td><%= link_to 'Show', ability %></td>
        <td><%= link_to 'Edit', edit_ability_path(ability) %></td>
        <td><%= link_to 'Destroy', ability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ability', new_ability_path %>
